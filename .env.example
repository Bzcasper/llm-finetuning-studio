# Environment Variables Template
# Copy this file to .env and replace placeholders with actual values
# NEVER commit .env files with real API keys to version control

# Application Configuration
NODE_ENV=development
VITE_APP_NAME=LLM Finetuning Studio

# Modal.com API Configuration
VITE_MODAL_SECRET_ID=your_modal_secret_id_here
VITE_MODAL_API_KEY=your_modal_api_key_here
VITE_MODAL_TOKEN=your_modal_token_here

# Stripe API Configuration (if using payment features)
STRIPE_API_KEY=sk_test_your_stripe_api_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# HuggingFace Configuration (optional)
HUGGINGFACE_TOKEN=hf_your_huggingface_token_here

# Weights & Biases Configuration (optional)
WANDB_API_KEY=your_wandb_api_key_here

# Database Configuration (if applicable)
DATABASE_URL=your_database_connection_string_here

# Security Configuration
SECRET_KEY=your_application_secret_key_here
JWT_SECRET=your_jwt_secret_here

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100